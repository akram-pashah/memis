@model List<MEMIS.Data.Directorate>

<h1>Directorates</h1>
@{
  ViewData["Title"] = "Directorates";
  //Layout = "~/Views/Shared/_AdminLayout.cshtml";
  Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}


<div class="row">
    <div class="col d-flex justify-content-end mb-3">
        <a class="btn btn-info" asp-action="Create">Create New</a>
    </div>
</div>

<div class="card">
  <div class="card-body">
        <table class="table table-striped table-bordered table-hover dt-responsive nowrap">
            <thead class="table-active">
                <tr>
                    <th>
                        Code
                    </th>
                    <th>
                        Name
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.dirCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dirName)
                        </td>

                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a asp-action="Edit" asp-route-id="@item.intDir" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Edit">
                                    <i class='bx bx-edit'></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.intDir" class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Details">
                                    <i class='bx bx-detail'></i>
                                </a>
                                 <form asp-action="Delete" asp-route-id="@item.intDir">
                                    <a asp-action="Delete" asp-route-id="@item.intDir" onclick="return confirm('Are you sure do you want to delete this record?')" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete">
                                    <i class='bx bx-message-square-x'></i>
                                </a>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


