@using MEMIS.Data;
@model List<ActivityAssess>
@{
    ViewData["Title"] = "Planning Reports";
    //Layout = "~/Views/Shared/_PlanningLayout.cshtml";
    Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}

<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Planning Reports /</span> Programe Implementation Plan
</h4>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills flex-column flex-md-row mb-3">
            <li class="nav-item"><a class="nav-link" href="/Reports/planningIndex">Programe Implementation Plan</a></li>
            <li class="nav-item"><a class="nav-link active" href="javascript:void(0);">Consolidated Department Plan</a></li>
        </ul>

        <div class="card mb-4">
            <h5 class="card-header">
                <div class="col d-flex justify-content-end mb-3">
                    <a class="btn btn-outline-success float-end float-right" asp-action="ConsolidatedExportToExcel" target="_blank">Export to Excel</a>
                </div>
            </h5>
            <hr class="my-0" />

            <div class="card-body">
                <div style="width:100%; overflow-x:auto;">
                    <table class="table table-striped table-bordered table-hover dt-responsive nowrap">
                        <thead class="table-active">
                            <tr>
                                <th>
                                    Strategic Objective
                                </th>
                                <th>
                                    Strategic Intervention
                                </th>
                                <th>
                                    Strategic Actions
                                </th>
                                <th>
                                    Activities/Initiatives
                                </th>
                                <th>
                                    Output Indicators
                                </th>
                                <th>
                                    Baseline
                                </th>
                                <th>
                                    Annual Target
                                </th>
                                <th>
                                    Budget Code
                                </th>
                                <th>
                                    Amount Allocated
                                </th>
                                <th>
                                    Quarter 1
                                </th>
                                <th>
                                    Quarter 2
                                </th>
                                <th>
                                    Quarter 3
                                </th>
                                <th>
                                    Quarter 4
                                </th>
                                <th>
                                    Identified Risks
                                </th>
                                <th>
                                    Responsible Party
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{
                                            var objectiveName = item?.StrategicIntervention?.StrategicObjective?.ObjectiveName ?? string.Empty;
                                        }
                                        @Html.DisplayFor(m => objectiveName)
                                    </td>
                                    <td>
                                        @{
                                            var InterventionName = item?.StrategicIntervention?.InterventionName ?? string.Empty;
                                        }
                                        @Html.DisplayFor(m => InterventionName)
                                    </td>
                                    <td>
                                        @{
                                            var actionName = item?.StrategicAction?.actionName ?? string.Empty;
                                        }
                                        @Html.DisplayFor(m => actionName)
                                    </td>
                                    <td>
                                        @{
                                            var activityName = item?.ActivityFk?.activityName ?? string.Empty;
                                        }
                                        @Html.DisplayFor(m => actionName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.outputIndicator)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.baseline)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.QTarget)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.budgetCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.budgetAmount)
                                    </td>
                                    <td>
                                        &nbsp;
                                    </td>
                                    <td>
                                        &nbsp;
                                    </td>
                                    <td>
                                        &nbsp;
                                    </td>
                                    <td>
                                        &nbsp;
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdentifiedRisks)
                                    </td>
                                    <td>
                                        @{
                                            var deptName = item?.DepartmentFk?.deptName ?? string.Empty;
                                        }
                                        @Html.DisplayFor(m => deptName)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @*<cs-pager cs-paging-pagenumber="@Model.PageNumber"
                    cs-paging-totalitems="@Model.TotalItems"
                    cs-paging-pagesize="@Model.PageSize"
                    cs-pagenumber-param="pagenumber"
                    asp-controller="RiskIdentifications"
                    asp-action="Index"
                    cs-pager-li-current-class="page-item active"
                    cs-pager-li-other-class="page-item"
                    cs-pager-li-non-active-class="page-item disabled"
                    cs-pager-link-current-class="page-link"
                    cs-pager-link-other-class="page-link"></cs-pager>*@
                </div>
            </div>
        </div>
    </div>
</div>

