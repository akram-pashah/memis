@{
    static string getAchievement(string? achieve)
    {
        foreach (var nachieve in ListHelper.AchievementStatus())
        {
            if (nachieve.Value == achieve)
            {
                return nachieve.Text;
            }
        }
        return "NA";
    }

    static string getAchievementColor(string? achieve)
    {
        return achieve == "1.0" ? "#00b050" : achieve == "0.5" ? "#fefe00" : "#fd0000";
    }
}
