@using MEMIS.Data;
@model List<SDTAssessment>
@{
    ViewData["Title"] = "M&E Reports";
    //Layout = "~/Views/Shared/_PlanningLayout.cshtml";
    Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}

<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">M&E Reports /</span> SDT Quarterly Performance Report
</h4>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills flex-column flex-md-row mb-3">
            <li class="nav-item"><a class="nav-link active" href="javascript:void(0);">SDT Quarterly Performance Report </a></li>
            <li class="nav-item"><a class="nav-link" href="KpiAssessment">KPI M&E Report</a></li>
            <li class="nav-item"><a class="nav-link" href="OpTargetPerfAchievReport">Output/Target Performance Achievement Report </a></li>
            <li class="nav-item"><a class="nav-link" href="StrategicActionPerfAchievReport">Strategic Action Performance Achievement  </a></li>
            <li class="nav-item"><a class="nav-link" href="StrategicInterventionPerfAchievReport">Strategic Intervention Performance Achievement  </a></li>
            <li class="nav-item"><a class="nav-link" href="StrategicObjectivePerfAchievReport">Strategic Objective Performance Achievement  </a></li>
            <li class="nav-item"><a class="nav-link" href="OutcomePerformanceAchievementReport">Outcome Performance Achievement Report</a></li>
            <li class="nav-item"><a class="nav-link" href="ImpactPerformanceAchievementReport">Impact Performance Achievement Report</a></li>
        </ul>

        <div class="card mb-4">
            <h5 class="card-header">
                <div class="col d-flex justify-content-end mb-3">
                    <a class="btn btn-outline-success float-end float-right" asp-action="SDTExportToExcel" target="_blank">Export to Excel</a>
                </div>
            </h5>
            <hr class="my-0" />

            <div class="card-body">
                <div style="width:100%; overflow-x:auto;">
                    <table class="table table-striped table-bordered table-hover dt-responsive nowrap">
                        <thead class="table-active">
                            <tr>
                                <th>
                                    Month
                                </th>
                                <th>
                                    SDT
                                </th>
                                <th>
                                    SDT Numerator
                                </th>
                                <th>
                                    SDT Denominator
                                </th>
                                <th>
                                    Numerator Perf
                                </th>
                                <th>
                                    Denominator Perf
                                </th>
                                <th>
                                    Implemented Within Timeline
                                </th>
                                <th>
                                    Average Working Days
                                </th>
                                <th>
                                    % Implemented Within Timeline
                                </th>
                                <th>
                                    Target
                                </th>
                                <th>
                                    Achievement Status
                                </th>
                                <th>
                                    % Variance
                                </th>
                                <th>
                                    Justification
                                </th>
                                <th>
                                    Rating
                                </th>
                                <th>
                                    Department
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Month)
                                    </td>
                                    <td>
                                        @{
                                            var ServiceDeliveryTimeline = item?.SDTMasterFk?.ServiceDeliveryTimeline ?? string.Empty;
                                        }
                                        @Html.DisplayFor(m => ServiceDeliveryTimeline)
                                    </td>
                                    <td>
                                        @{
                                            var Numerator = item?.SDTMasterFk?.Numerator ?? string.Empty;
                                        }
                                        @Html.DisplayFor(m => Numerator)
                                    </td>
                                    <td>
                                        @{
                                            var Denominator = item?.SDTMasterFk?.Denominator ?? string.Empty;
                                        }
                                        @Html.DisplayFor(m => Denominator)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Numerator)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Denominator)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ImplementedTimeline)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProportionTimeline)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Target)
                                    </td>
                                    <td>
                                        @getAchievement(item.AchivementStatus)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Variance)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Justification)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rating)
                                    </td>
                                    <td>
                                        @{
                                            var deptName = item?.SDTMasterFk?.DepartmentFk?.deptName ?? string.Empty;
                                        }
                                        @Html.DisplayFor(m => deptName)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @*<cs-pager cs-paging-pagenumber="@Model.PageNumber"
                    cs-paging-totalitems="@Model.TotalItems"
                    cs-paging-pagesize="@Model.PageSize"
                    cs-pagenumber-param="pagenumber"
