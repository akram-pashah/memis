@using MEMIS.Data;
@model List<ProgramImplementationPlan>
@{
    ViewData["Title"] = "Planning Reports";
    //Layout = "~/Views/Shared/_PlanningLayout.cshtml";
    Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}

<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Planning Reports /</span> Programe Implementation Plan
</h4>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills flex-column flex-md-row mb-3">
            <li class="nav-item"><a class="nav-link active" href="javascript:void(0);">Programe Implementation Plan</a></li>
            <li class="nav-item"><a class="nav-link" href="ConsolDeptPlan">Annual Detailed Results Framework</a></li>
            <li class="nav-item"><a class="nav-link" href="/Reports/ActivityImplementationStatus">Activity Implementation Status Report</a></li>
            <li class="nav-item"><a class="nav-link" href="/Reports/StrategicPlanActivityImplementationTracker">Strategic Plan Activity Implementation Tracker</a></li>
        </ul>

        <div class="card mb-4">
            <h5 class="card-header">
                <div class="col d-flex justify-content-end mb-3">
                    <a class="btn btn-outline-success float-end float-right" asp-action="ExportToExcel" target="_blank">Export to Excel</a>
                </div>
            </h5>
            <hr class="my-0" />

            <div class="card-body">
                <div style="width:100%; overflow-x:auto;">
                    <table class="table table-striped table-bordered table-hover dt-responsive nowrap">
                        <thead class="table-active">
                            <tr>
                                <th>
                                    Strategic Objective
                                </th>
                                <th>
                                    Strategic Intervention
                                </th>
                                <th>
                                    Strategic Actions
                                </th>
                                <th>
                                    Activities
                                </th>
                                <th>
                                    Output Indicators
                                </th>
                                <th>
                                    Output Targets
                                </th>
                                <th>
                                    FY 1
                                </th>
                                <th>
                                    FY 2
                                </th>
                                <th>
                                    FY 3
                                </th>
                                <th>
                                    FY 4
                                </th>
                                <th>
                                    FY 5
                                </th>
                                <th>
                                    Means of Verification
                                </th>
                                <th>
                                    Responsible Party
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.StrategicObjectiveFK?.ObjectiveName
                                    </td>
                                    <td>
                                        @item.StrategicInterventionFK?.InterventionName
                                    </td>
                                    <td>
                                        @item.StrategicActionFK?.actionName
                                    </td>
                                    <td>
                                        @item.ActivityFK?.activityName
                                    </td>
                                    <td>
                                        @item.Output
                                    </td>
                                    <td>
                                        @item.OutputTarget
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FY1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FY2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FY3)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FY4)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FY5)
                                    </td>
                                    <td>
                                        @item.MeansofVerification
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ResponsibleParty)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @*<cs-pager cs-paging-pagenumber="@Model.PageNumber"
                    cs-paging-totalitems="@Model.TotalItems"
                    cs-paging-pagesize="@Model.PageSize"
                    cs-pagenumber-param="pagenumber"
                    asp-controller="RiskIdentifications"
                    asp-action="Index"
                    cs-pager-li-current-class="page-item active"
                    cs-pager-li-other-class="page-item"
                    cs-pager-li-non-active-class="page-item disabled"
                    cs-pager-link-current-class="page-link"
                    cs-pager-link-other-class="page-link"></cs-pager>*@
                </div>
            </div>
        </div>
    </div>
</div>

