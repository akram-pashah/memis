@model MEMIS.Data.KPIMaster

@{
  ViewData["Title"] = "Details";
  //Layout = "~/Views/Shared/_MELayout.cshtml";
  Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}

<h1>Details</h1>

<div class="card">
    <div class="card-header">
    <h2 class="card-title">KPI M&E Framework</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Strategic Objective
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StrategicPlanFk.strategicObjective)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PerformanceIndicator)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PerformanceIndicator)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TypeofIndicator)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TypeofIndicator)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IndicatorFormulae)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IndicatorFormulae)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IndicatorDefinition)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IndicatorDefinition)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OriginalBaseline)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OriginalBaseline)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Indicatorclassification)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Indicatorclassification)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Unitofmeasure)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Unitofmeasure)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FrequencyofReporting)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FrequencyofReporting)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MeansofVerification)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MeansofVerification)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.intDept)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DepartmentFk.deptName)
            </dd>

        </dl>
    </div>
    @functions
    {
        public string GetTypeofIndicator(int type)
        {
            foreach (var ntype in ListHelper.TypeofIndicator())
            {
                if (Convert.ToInt32(ntype.Value) == type)
                {
                    return ntype.Text;
                }
            }
            return "NA";
        }
        public string GetIndicatorclassification(int classification)
        {
            foreach (var nclass in ListHelper.Indicatorclassification())
            {
                if (Convert.ToInt32(nclass.Value) == classification)
                {
                    return nclass.Text;
                }
            }
            return "NA";
        }
        public string GetFrequencyofReporting(int reporting)
        {
            foreach (var nreporting in ListHelper.FrequencyofReporting())
            {
                if (Convert.ToInt32(nreporting.Value) == reporting)
                {
                    return nreporting.Text;
                }
            }
            return "NA";
        }
    }
    <div class="card-footer">
        <a role="button" class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a role="button" class="btn btn-sm btn-outline-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
