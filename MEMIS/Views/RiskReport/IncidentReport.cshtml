@using MEMIS.Data.Risk;
@model List<QuarterlyRiskAction>
@{
    ViewData["Title"] = "Risk Reports";
    //Layout = "~/Views/Shared/_PlanningLayout.cshtml";
    Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}

<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Risk Reports /</span> Incident Report
</h4>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills flex-column flex-md-row mb-3">
            <li class="nav-item"><a class="nav-link" href="/RiskReport/Index">Quarterly Report</a></li>
            <li class="nav-item"><a class="nav-link" href="/RiskReport/AnnualReport">Annual Report</a></li>
            <li class="nav-item"><a class="nav-link" href="/RiskRegister">Risk Register</a></li>
            <li class="nav-item"><a class="nav-link" href="/RiskReport/RiskTreatmentPlan">Risk Treatment Plan</a></li>
            <li class="nav-item"><a class="nav-link" href="/RiskReport/RiskMonitoringReport">Risk Monitoring Report</a></li>
            <li class="nav-item"><a class="nav-link active" href="javascript:void(0);">Incident Report</a></li>
        </ul>

        <div class="card mb-4">
            <h5 class="card-header">
                <div class="col d-flex justify-content-end mb-3">
                    <a class="btn btn-outline-success float-end float-right" asp-action="IncidentReportExcel" target="_blank">Export to Excel</a>
                    <a class="btn btn-outline-danger float-end float-right" asp-action="IncidentReportPdf" target="_blank">Export to Pdf</a>
                </div>
            </h5>

            <hr class="my-0" />

            <div class="card-body">
                <div style="width:100%; overflow-x:auto;">
                    <table class="table table-striped table-bordered table-hover dt-responsive nowrap">
                        <thead class="table-active">
                            <tr>
                                <th>
                                    Risk Title
                                </th>
                                <th>
                                    Action
                                </th>
                                <th>
                                    Incidents
                                </th>
                                <th>
                                    Date Of Occured
                                </th>
                                <th>
                                    Financial Loss
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                bool isFirstRowForRisk = true;
                                foreach (var incident in item.Incidents)
                                {
                                    <tr>
                                        @if (isFirstRowForRisk)
                                        {
                                            <td rowspan="@item.Incidents.Count">@item.RiskDescription</td>
                                            <td rowspan="@item.Incidents.Count">@item.RiskTreatmentPlan.TreatmentAction</td>
                                            isFirstRowForRisk = false;
                                        }
                                        @* Incident details *@
                                        <td>@incident.Description</td>
                                        <td>@incident.DateOccured.Value.ToString("dd/MMM/yyyy")</td>
                                        <td>@incident.FinancialLoss</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
