@using MEMIS.Data;
@model cloudscribe.Pagination.Models.PagedResult<ComplianceSupportSupervision>


@{
    ViewData["Title"] = "Compliance Support Supervision";
    Layout = "~/Views/Shared/_GISLayout.cshtml";
}
<style>
    .content {
        width: calc(100% - 280px);
    }

    table {
        font-size: 12px;
    }
</style>

<p>
    <a role="button" class="btn btn-sm btn-outline-primary" asp-action="Create">Create New</a>
</p>
<div style="width:100%; overflow-x:auto;">
    <table class="table table-striped table-bordered table-hover dt-responsive nowrap">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].InspectionDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].GPS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].Region)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].District)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].FacilityName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].FacilityStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].FacilityPersonType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].CategoryOfpremises)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].LicenseStatus)
                </th> 
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InspectionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GPS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Region.regionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.District.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FacilityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FacilityStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FacilityPersonType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryOfpremises)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LicenseStatus)
                </td> 
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <cs-pager cs-paging-pagenumber="@Model.PageNumber"
              cs-paging-totalitems="@Model.TotalItems"
              cs-paging-pagesize="@Model.PageSize"
              cs-pagenumber-param="pagenumber"
              asp-controller="PreInspections"
              asp-action="Index"
              cs-pager-li-current-class="page-item active"
              cs-pager-li-other-class="page-item"
              cs-pager-li-non-active-class="page-item disabled"
              cs-pager-link-current-class="page-link"
              cs-pager-link-other-class="page-link"></cs-pager>
</div>
