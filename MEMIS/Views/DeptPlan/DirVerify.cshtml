@using MEMIS.Data;
@model cloudscribe.Pagination.Models.PagedResult<DeptPlan>

@{
    ViewData["Title"] = "Department Plan Verification [Director]";
    Layout = "~/Views/Shared/_PlanningLayout.cshtml";
}
<style>
    .content {
        width: calc(100% - 280px);
    }

    table {
        font-size: 12px;
    }
</style>
<h1>Department Plan Verification [Director]</h1> 
<div style="width:100%; overflow-x:auto;">
    <table id="DeptPlanTable" class="table table-striped table-bordered table-hover dt-responsive nowrap">
        <thead>
            <tr> 
                <th hidden>
                    @Html.DisplayNameFor(model => model.Data[0].intActivity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].StrategicObjective)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].strategicIntervention)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].StrategicAction)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].activity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].outputIndicator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].baseline)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].budgetCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].unitCost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].Q1Target)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].Q1Budget)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].Q2Target)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].Q2Budget)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].Q3Target)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].Q3Budget)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].Q4Target)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].Q4Budget)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].comparativeTarget)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].justification)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].budgetAmount)
                </th>
                <th>Department</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.intActivity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StrategicPlanFk.strategicObjective)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StrategicPlanFk.strategicIntervention)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StrategicActionFk.StrategicAction)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.activity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.outputIndicator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.baseline)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.budgetCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.unitCost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Q1Target)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Q1Budget)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Q2Target)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Q2Budget)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Q3Target)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Q3Budget)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Q4Target)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Q4Budget)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.comparativeTarget)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.justification)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.budgetAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentFk.deptName)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.intActivity">Details</a> |
                        <a asp-action="DirVerifyStatus" asp-route-id="@item.intActivity" asp-route-IsVerified="True">Verify</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <cs-pager cs-paging-pagenumber="@Model.PageNumber"
              cs-paging-totalitems="@Model.TotalItems"
              cs-paging-pagesize="@Model.PageSize"
              cs-pagenumber-param="pagenumber"
              asp-controller="RiskIdentifications"
              asp-action="Index"
              cs-pager-li-current-class="page-item active"
              cs-pager-li-other-class="page-item"
              cs-pager-li-non-active-class="page-item disabled"
              cs-pager-link-current-class="page-link"
              cs-pager-link-other-class="page-link"></cs-pager>
</div>

@section Scripts {

    <script>
 


    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
