                @Html.DisplayFor(modelItem => item.justification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.budgetAmount)
            </td>
            <td>
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Edit" asp-route-id="@item.intDeptPlan" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen-to-square"></i> Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.intDeptPlan" class="btn btn-sm btn-info"><i class="fa-solid fa-circle-info"></i> View</a> |

                    </div>
