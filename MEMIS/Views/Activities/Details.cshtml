@model MEMIS.Data.Activity

@{
  ViewData["Title"] = "Details";
  //Layout = "~/Views/Shared/_PlanningLayout.cshtml";
  Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}

<h1>Details</h1>

<div class="card">
    <div class="card-header">
    <h2 class="card-title">Activity</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.activityCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.activityCode)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.activityName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.activityName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StrategicAction)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StrategicAction.actionCode)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a role="button" class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.intActivity">Edit</a> |
        <a role="button" class="btn btn-sm btn-outline-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
