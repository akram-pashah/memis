@using MEMIS.Data;
@model List<ProjectRiskIdentification>
@{
    ViewData["Title"] = "Project Management Reports";
    //Layout = "~/Views/Shared/_PlanningLayout.cshtml";
    Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";

    var ProjectInitiationId = ViewBag.SelectedProjectInitiationId;
}

<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Project Management Reports /</span> Project Risk Management Report
</h4>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills flex-column flex-md-row mb-3">
            <li class="nav-item"><a class="nav-link" asp-action="Index">Project List Report</a></li>
            <li class="nav-item"><a class="nav-link" asp-action="ProjectActivitySchedule">Project Activity Schedule Report</a></li>
            <li class="nav-item"><a class="nav-link active" href="javascript:void(0);">Project Risk Management Report</a></li>
            <li class="nav-item"><a class="nav-link" asp-action="StakeholderManagementReport">Stake Holder Management Report</a></li>
            <li class="nav-item"><a class="nav-link" asp-action="IssueLogReport">Issue Log Report</a></li>
        </ul>

        <div class="card mb-4">
            <<form asp-action="ProjectRiskManagementReport" class="card-header row">
                <div class="col d-flex justify-content-start mb-3">
                    <select class="form-control form-control-sm" asp-for="@ProjectInitiationId" name="ProjectInitiationId" asp-items="ViewBag.ProjectInitiations">
                        <option value="">Select Project</option>
                    </select>
                    <input type="submit" class="btn btn-primary float-end float-right" value="Load" />
                </div>
                <div class="col d-flex justify-content-end mb-3">
                    <a class="btn btn-outline-success float-end float-right" asp-action="ProjectRiskManagementReportExcel" asp-route-ProjectInitiationId="@ViewBag.SelectedProjectInitiationId" target="_blank">Export to Excel</a>
                </div>
            </form>

            <hr class="my-0" />

            <div class="card-body">
                <div style="width:100%; overflow-x:auto;">
                    <table class="table table-striped table-bordered table-hover dt-responsive nowrap">
                        <thead class="table-active">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].Stage)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].Risk)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].Likelihood)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].Severity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].Rank)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].Consequence)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].Mitigation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].RiskImplementationCost)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].Ownership)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Stage)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Risk)
                                    </td>
                                    <td>
                                        @Enum.GetName(typeof(MEMIS.EnumRiskRank), item.Likelihood)
                                    </td>
                                    <td>
                                        @Enum.GetName(typeof(MEMIS.EnumRiskRank), item.Severity)
                                    </td>
                                    <td>
                                        @* @Enum.GetName(typeof(MEMIS.EnumRiskRank), item.Rank) *@
                                        @item.Rank
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Consequence)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mitigation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RiskImplementationCost)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ownership)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
