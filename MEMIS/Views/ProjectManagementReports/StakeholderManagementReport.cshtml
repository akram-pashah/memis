@using MEMIS.Data.Project;
@model List<StakeHolder>
@{
    ViewData["Title"] = "Project Management Reports";
    //Layout = "~/Views/Shared/_PlanningLayout.cshtml";
    Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}

<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Project Management Reports /</span> Stake Holder Management Report
</h4>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills flex-column flex-md-row mb-3">
            <li class="nav-item"><a class="nav-link" asp-action="Index">Project List Report</a></li>
            <li class="nav-item"><a class="nav-link" asp-action="ProjectActivitySchedule">Project Activity Schedule Report</a></li>
            <li class="nav-item"><a class="nav-link" asp-action="ProjectRiskManagementReport">Project Risk Management Report</a></li>
            <li class="nav-item"><a class="nav-link active" href="javascript:void(0);">Stake Holder Management Report</a></li>
            <li class="nav-item"><a class="nav-link" asp-action="IssueLogReport">Issue Log Report</a></li>
        </ul>

        <div class="card mb-4">
            <h5 class="card-header">
                <div class="col d-flex justify-content-end mb-3">
                    <a class="btn btn-outline-success float-end float-right" asp-action="StakeholderManagementReportExcel" target="_blank">Export to Excel</a>
                </div>
            </h5>

            <hr class="my-0" />

            <div class="card-body">
                <div style="width:100%; overflow-x:auto;">
                    <table class="table table-striped table-bordered table-hover dt-responsive nowrap">
                        <thead class="table-active">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].StakeholderName)
                                </th>
                                <th colspan="5">
                                    Contact Person
                                </th>
                                <th>
                                    Impact
                                </th>
                                <th>
                                    Influence
                                </th>
                                <th>
                                    What is important to the stakeholder?
                                </th>
                                <th>
                                    How could the stakeholder contribute to the project?
                                </th>
                                <th>
                                    How could the stakeholder block the project?
                                </th>
                                <th>
                                    Strategy for engaging the stakeholder
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StakeholderName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactPersonName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactPersonEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactPersonPhone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactPersonAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactPersonWebsite)
                                    </td>
                                    <td>
                                        @ListHelper.GetImpact(item.Impact)
                                    </td>
                                    <td>
                                        @ListHelper.GetImpact(item.Influence)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StakeHolderImportant)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StakeholderContribution)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Stakeholderblock)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StakeholderStrategy)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
