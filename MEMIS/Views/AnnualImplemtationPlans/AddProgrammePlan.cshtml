@using MEMIS.Data;
@using System.Security.Claims;
@using Microsoft.AspNetCore.Identity;
@model List<MEMIS.Data.ProgramImplementationPlan>
@*@model cloudscribe.Pagination.Models.PagedResult<ProgramImplementationPlan>*@

@{
  ViewData["Title"] = "Index";
  //Layout = "~/Views/Shared/_PlanningLayout.cshtml";
  Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}





<div class="row ">
  <div class="col">
    <h3 class="header-title">Program Implementation Plan</h3>
  </div>
  @*   <div class="col-md-2">
    <a class="btn btn-outline-success float-end float-right" asp-action="ExportToExcel" target="_blank">Export to Excel</a>
    </div> *@
  <div class="col d-flex justify-content-end mb-3">
    <a class="btn btn-info btn-create" asp-action="Create">Create New</a>
  </div>
</div>
<br />
<form asp-action="MoveProgrammePlan" method="post">
  <div class="row">

    <div class="col-md-2">
      <label class="control-label">Financial Year</label>
    </div>
    <div class="col-md-3">
      <select class="form-control form-control-sm" id="FYearDropdown" name="FYear" asp-items="ViewBag.FYear">
        <option value="">Select Year</option>
      </select>
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-sm btn-outline-primary">Search</button>
    </div>
  </div>
</form>
<br />
<div class="card">
  <div class="card-body" style="width:100%; overflow-x:auto;">
    <table class="table table-striped table-bordered table-responsive-sm table-hover  dt-responsive nowrap">
      <thead class="table-active">
        <tr>
          <th>
            @Html.DisplayNameFor(model => model[0].intObjective)
          </th>
          <th>
            @Html.DisplayNameFor(model => model[0].intIntervention)
          </th>
          <th>
            @Html.DisplayNameFor(model => model[0].intAction)
          </th>
          <th>
            @Html.DisplayNameFor(model => model[0].intActivity)
          </th>
          <th>
            @Html.DisplayNameFor(model => model[0].Output)
          </th>
          <th>
            @Html.DisplayNameFor(model => model[0].OutputTarget)
          </th>
          <th>
            @Html.DisplayNameFor(model => model[0].FY1)
          </th>
          <th>
            @Html.DisplayNameFor(model => model[0].FY2)
          </th>
          <th>
            @Html.DisplayNameFor(model => model[0].FY3)
          </th>
          <th>
            @Html.DisplayNameFor(model => model[0].FY4)
          </th>
          <th>
            @Html.DisplayNameFor(model => model[0].FY5)
          </th>
          <th>
            @Html.DisplayNameFor(model => model[0].unitCost)
          </th>
          <th>
            @Html.DisplayNameFor(model => model[0].MeansofVerification)
          </th>
          <th>
            @Html.DisplayNameFor(model => model[0].ResponsibleParty)
          </th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td>
              @Html.DisplayFor(modelItem => item.StrategicObjectiveFK.ObjectiveName)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.StrategicInterventionFK.InterventionName)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.StrategicActionFK.actionName)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.ActivityFK.activityName)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Output)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.OutputTarget)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.FY1)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.FY2)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.FY3)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.FY4)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.FY5)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.unitCost)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.MeansofVerification)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.ResponsibleParty)
            </td>
            <td>
              <div class="btn-group" role="group" aria-label="Actions">
                <a href="javascript:void(0);" onclick="moveProgrammePlan(@item.Id)" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Edit">
                  <i class='bx bxs-right-arrow-alt'></i>
                </a>
              </div>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>
<script type="text/javascript">
  function moveProgrammePlan(Id) {
    var selectedFYear = document.getElementById("FYearDropdown").value;

    if (selectedFYear) {
      window.location.href = '/AnnualImplemtationPlans/MoveProgrammePlan?Id=' + Id + '&FYear=' + selectedFYear;
    } else {
      alert("Please select a financial year before proceeding.");
    }
  }
</script>
