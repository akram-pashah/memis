@using MEMIS.Data;
@using System.Security.Claims;
@using Microsoft.AspNetCore.Identity;
@model List<MEMIS.Data.AnnualImplemtationPlan>

@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_PlanningLayout.cshtml";
    Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}

<div class="row">
    <div class="col">
        <h3>Annualised Strategic Plan Implementation Action Plan</h3>
    </div>
    @*   <div class="col-md-2">
    <a class="btn btn-outline-success float-end float-right" asp-action="ExportToExcel" target="_blank">Export to Excel</a>
    </div> *@
    <div class="col-md-2 d-flex justify-content-end mb-3">
        <a class="btn btn-info" asp-action="Create">Create New</a>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div style="width:100%; overflow-x:auto;margin-top:20px;">
            <table class="table table-striped table-bordered table-hover dt-responsive nowrap" id="datatable">
                <thead class="table-active">
                  <tr>
                    <th>
                      @Html.DisplayNameFor(model => model[0].subProgram)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model[0].intFocus)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model[0].intObjective)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model[0].intIntervention)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model[0].intAction)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model[0].intActivity)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model[0].baseline)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model[0].Year)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model[0].annualTarget)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model[0].unitCost)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model[0].meansofVerification)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model[0].Risk)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model[0].intDept)
                    </th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                          <td>
                            @Html.DisplayFor(modelItem => item.subProgram)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.FocusAreaFk.FocusAreaName)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.StrategicObjectiveFk.ObjectiveName)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.StrategicInterventionFk.InterventionName)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.StrategicActionFk.actionName)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.ActivityFk.activityName)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.baseline)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.Year)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.annualTarget)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.unitCost)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.meansofVerification)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.Risk)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.DepartmentFk.deptName)
                          </td>
                          <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                              <a asp-action="MoveAnualPlan" asp-route-id="@item.Id" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Edit">
                                <i class='bx bxs-right-arrow-alt'></i>
                              </a>
                            </div>
                          </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

