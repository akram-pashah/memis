@model IEnumerable<MEMIS.Data.ActivityAssessRegion>

@{
    Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}
<div class="row">
    <div class="col">
        <h3>Regional Assessment Verification</h3>
    </div>
</div>

<div class="card">
    <div class="card-body" style="width:100%; overflow-x:auto;margin-top:20px;">
        <form id="RegionalForm" method="post" asp-action="RegionalAssessmentVerification">
            <table class="table table-striped table-bordered table-hover dt-responsive nowrap" id="datatable">
                <thead class="table-active">
                    <tr>
                        <th>
                            <input type="checkbox" id="selectAll" />
                        </th>
                       <th>
                         Region
                       </th>
                       <th>
                         Budget Amount
                       </th>
                       <th>
                         Quarters
                       </th>
                       <th>
                         Quarterly Target
                       </th>
                       <th>
                         Quarterly Budget
                       </th>
                       <th>
                         Actions
                       </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" @(item.ApprStatus == 1 ? "checked" : "") name="selectedIds" value="@item.intRegionAssess" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Region.regionName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.budgetAmount)
                            </td>
                            <td>
                                @item.QuaterlyPlans.Count
                            </td>
                            <td>
                                @item.QuaterlyPlans.Sum(x => x.QTarget)
                            </td>
                            <td>
                                @item.QuaterlyPlans.Sum(x => x.QBudget)
                            </td>
                            <td>
                                <button type="button" class="btn btn-info" data-id="@item.intRegionAssess">
                                    View Details
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <div class="col-md-3">
                <div class="row">
                    <div class="col-md-6">
                        <select name="apprStatus" class="w-100 form-control">
                            <option value="1">Verified</option>
                            <option value="2">Rejected</option>
                        </select>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-primary w-100" />
                        </div>
                    </div>
                </div>
            </div>
      </form>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#selectAll').click(function () {
                $('input[name="selectedIds"]').prop('checked', this.checked);
            });
        });
    </script>
}

<div class="modal fade" id="activityAssessModal" tabindex="-1" role="dialog" aria-labelledby="activityAssessModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="activityAssessModalLabel">Activity Assess Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>

    $(document).on('click', 'button[data-id]', function () {
        var id = $(this).data('id');

        $.ajax({
            url: '@Url.Action("GetActivityAssessDetails", "ActivityAsses")',
            type: 'GET',
            data: { id: id },
            success: function (data) {
                $('#activityAssessModal .modal-body').html(data);
                $('#activityAssessModal').modal('show');
            },
            error: function () {
                alert('Failed to load details.');
            }
        });
    });
</script>
