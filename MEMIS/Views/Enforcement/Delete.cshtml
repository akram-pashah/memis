@model MEMIS.Data.Enforcement

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_GISLayout.cshtml";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Preinspection</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InspectionDate)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.InspectionDate)
        </dd> 
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DistrictId)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.District.Name)
        </dd> 
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GPS)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.GPS)
        </dd> 
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InspectorId)
        </dt>
        <dd class="col-sm-4">
            @ViewBag.Users.FindByIdAsync(Model.InspectorId).Result.UserName
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-sm btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
