            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

        @{
            var viewData = new ViewDataDictionary(ViewData);
            viewData["RiskRefID"] = Model.RiskRefID;
        }

        @Html.Partial("_TreatmentPlanForm", new MEMIS.Data.Risk.RiskTreatmentPlan(), viewData)
