@using MEMIS.Data
@model List<ActivityAssessment>

@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_MELayout.cshtml";
    Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}

<div class="row">
    <div class="col">
        <h3>Activity Assessment Consolidation</h3>
    </div>
</div>
<form id="activityForm" method="post" asp-action="VerificationUpdate">
    <div class="card">
        <div class="card-body" style="width:100%; overflow-x:auto;margin-top:20px;">
            <table class="table table-striped table-bordered table-hover dt-responsive nowrap" id="datatable">
                <thead class="table-active">
                    <tr>
                        <th>
                            <input type="checkbox" id="selectAll" />
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].strategicObjective)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].strategicIntervention)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].StrategicAction)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].activity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].outputIndicator)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].baseline)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].budgetCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].comparativeTarget)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].justification)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].budgetAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].AnnualAchievement)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].TotAmtSpent)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].AnnualJustification)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" @(item.ActivityAssesmentStatus == 0 ? "checked" : "") name="selectedIds" value="@item.intDeptPlan" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.strategicObjective)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.strategicIntervention)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StrategicAction)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.activity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.outputIndicator)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.baseline)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.budgetCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.comparativeTarget)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.justification)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.budgetAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AnnualAchievement)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotAmtSpent)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AnnualJustification)
                            </td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Actions">
                                    @if (item.actType == 0)
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.intDeptPlan" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit">
                                            <i class='bx bx-edit'></i>
                                        </a>
                                    }
                                    <a asp-action="Details" asp-route-id="@item.intDeptPlan" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Details">
                                        <i class='bx bx-detail'></i>
                                    </a>
                                    @* <a asp-action="Edit" asp-route-id="@item.intDeptPlan" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Edit">
                                <i class='bx bx-edit'></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.intDeptPlan" class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Details">
                                <i class='bx bx-detail'></i>
                                </a> *@
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="col-md-3">
                <div class="row">
                    <div class="col-md-6">
                        <select name="apprStatus" class="w-100 form-control">
                            <option value="5">Verified</option>
                            <option value="6">Rejected</option>
                        </select>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-primary w-100" />
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#selectAll').click(function () {
                $('input[name="selectedIds"]').prop('checked', this.checked);
            });
        });
    </script>
}
