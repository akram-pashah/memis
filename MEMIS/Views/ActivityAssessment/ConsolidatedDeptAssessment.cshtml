@model IEnumerable<MEMIS.Data.ActivityAssessment>

@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_MELayout.cshtml";
    Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}


<div class="row">
    <div class="col">
        <h3>Department Assessments</h3>
    </div>
    <div class="col-md-2">
        @* <a class="btn btn-success float-end float-right" asp-action="AddAnnualPlan">Add Annual Plan</a> *@
    </div>
    <div class="col-md-2 d-flex justify-content-end mb-3">
        @* <a class="btn btn-info" asp-action="Create">Create New</a> *@
    </div>
</div>
<div class="card">
    <div class="card-body" style="width:100%; overflow-x:auto;margin-top:20px;">
        <table class="table table-striped table-bordered table-hover dt-responsive nowrap" id="datatable">
            <thead class="table-active">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.strategicObjective)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.strategicIntervention)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StrategicAction)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.activity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.outputIndicator)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.baseline)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.budgetCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.unitCost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.comparativeTarget)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.justification)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.budgetAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AnnualAchievement)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotAmtSpent)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImplementationStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AnnualJustification)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.strategicObjective)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.strategicIntervention)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StrategicAction)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.activity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.outputIndicator)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.baseline)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.budgetCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.unitCost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.comparativeTarget)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.justification)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.budgetAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AnnualAchievement)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotAmtSpent)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImplementationStatus.ImpStatusId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AnnualJustification)
                        </td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a asp-action="Edit" asp-route-id="@item.intDeptPlan" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Edit">
                                    <i class='bx bx-edit'></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.intDeptPlan" class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Details">
                                    <i class='bx bx-detail'></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

