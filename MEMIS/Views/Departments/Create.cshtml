@model MEMIS.Models.DepartmentDto

@{
  ViewData["Title"] = "Create";
  //Layout = "~/Views/Shared/_AdminLayout.cshtml";
  Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}
 
<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="deptCode" class="control-label"></label>
                <input asp-for="deptCode" class="form-control" />
                <span asp-validation-for="deptCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="deptName" class="control-label"></label>
                <input asp-for="deptName" class="form-control" />
                <span asp-validation-for="deptName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="intDir" class="control-label"></label>
                @Html.DropDownList("intDir", new SelectList(ViewBag.DirectorateList, "intDir", "dirName"), new { @class = "form-control", @required = "required" })
                <span asp-validation-for="intDir" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.intHod)
                @Html.DropDownList("intHod", new SelectList(ViewBag.hod, "Value", "Text"), new { @class = "form-control", @required = "required" })
                @* @Html.DropDownListFor(model => model.director, ViewBag.Directors as SelectList, new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.intHod, "", new { @class = "text-danger" })
            </div>
            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary w-100" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-secondary w-100">Back to List</a>
                    </div>
                </div>
            </div>
           
            
        </form>
    </div>
</div>
 

