@model IEnumerable<MEMIS.Data.Department>

@{
    ViewData["Title"] = "Departments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Departments</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-success"><i class="fa-solid fa-plus"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.deptCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.deptName)
            </th>
             
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.deptCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deptName)
            </td>
            
            <td>
                <div class="btn-group btn-group-sm">
                    <a asp-action="Edit" asp-route-id="@item.intDept" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen-to-square"></i> Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.intDept" class="btn btn-sm btn-info"><i class="fa-solid fa-circle-info"></i> View</a> |
                    <form asp-action="Delete" asp-route-id="@item.intDept">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure do you want to delete this record?')"><i class="fa-solid fa-trash"></i> Delete</button>
                    </form>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
