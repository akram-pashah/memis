@model MEMIS.Data.NDPFile<div class="container">  <div class="card-body row">    <div class="col-md-6">      <div class="card">        <h5 class="card-header">Upload File</h5>        <div class="card-body">          <form asp-action="UploadFile" method="post" enctype="multipart/form-data">            <div class="form-group card-text">              <input asp-for="FileContent" type="file" class="form-control-file" />            </div>            <br>            <div class="form-group">              <input type="submit" value="Upload" class="btn btn-outline-primary" />            </div>          </form>        </div>      </div>    </div>    <div class="col-md-6">      @if (Model?.FileContent != null && Model?.FileContent?.Length > 0)      {      <div class="card">        <h5 class="card-header">Uploaded File</h5>        <div class="card-body">          <p class="card-text">Filename: @Model.FileName</p>          <a asp-action="Download" asp-controller="NDP" asp-route-id="@Model.Id" class="btn btn-outline-primary">            <i class="fas fa-download"></i> Download File          </a>        </div>      </div>      }    </div>  </div></div>