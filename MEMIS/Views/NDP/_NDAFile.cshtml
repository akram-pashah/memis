@model MEMIS.Data.NDAFile

<div class="container mt-4">
    <div class="card">
        <h5 class="card-header">Strategic Plan</h5>
        <div class="card-body row">
            <div class="col-md-6">
                <form asp-action="UploadNDAFile" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="FileContent" class="form-label">Select file to upload:</label>
                        <input asp-for="FileContent" type="file" class="form-control-file" />
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Upload" class="btn btn-outline-primary" />
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                @if (Model?.FileContent != null && Model?.FileContent?.Length > 0)
                {
                    <div class="uploaded-file-info">
                        <h6>Uploaded File</h6>
                        <p class="card-text">Filename: @Model.FileName</p>
                        <a asp-action="DownloadNDAFile" asp-controller="NDP" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class='bx bx-download'></i> Download File
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
