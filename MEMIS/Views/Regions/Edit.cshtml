@model MEMIS.Models.RegionDto

@{
    ViewData["Title"] = "Edit";
    //Layout = "~/Views/Shared/_PlanningLayout.cshtml";
}

<h1>Edit</h1>

<h4>Region</h4>
<hr />
<div class="row">
    <div class="col-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="intRegion" />
            <div class="form-group">
                <label asp-for="regionCode" class="control-label"></label>
                <input asp-for="regionCode" class="form-control" />
                <span asp-validation-for="regionCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="regionName" class="control-label"></label>
                <input asp-for="regionName" class="form-control" />
                <span asp-validation-for="regionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.intHead)
                @Html.DropDownList("intHead", new SelectList(ViewBag.hor, "Value", "Text"), new { @class = "form-control", @required = "required" })
                @* @Html.DropDownListFor(model => model.director, ViewBag.Directors as SelectList, new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.intHead, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.regCoordinator)
                @Html.DropDownList("regCoordinator", new SelectList(ViewBag.regCord, "Value", "Text"), new { @class = "form-control", @required = "required" })
                @* @Html.DropDownListFor(model => model.director, ViewBag.Directors as SelectList, new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.regCoordinator, "", new { @class = "text-danger" })
            </div>
            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary w-100" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-secondary w-100">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
