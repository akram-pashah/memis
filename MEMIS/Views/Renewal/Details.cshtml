@model MEMIS.Data.Renewal

@{
  ViewData["Title"] = "Details";
  //Layout = "~/Views/Shared/_GISLayout.cshtml";
  Layout = "~/Pages/Shared/_ContentNavbarLayout.cshtml";
}

<h1>Details</h1>

<div class="card">
    <div class="card-header">
    <h2 class="card-title">Renewal</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InspectionDate)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.InspectionDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DistrictId)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.District.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GPS)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.GPS)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InspectorId)
            </dt>
            <dd class="col-sm-4">
                @if (@ViewBag.Users.FindByIdAsync(Model.InspectorId).Result != null)
                {
                    @ViewBag.Users.FindByIdAsync(Model.InspectorId).Result.UserName
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a role="button" class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a role="button" class="btn btn-sm btn-outline-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
